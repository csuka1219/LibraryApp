@using Library;

<MudDialog>
	<TitleContent>
        @if (Member!.ReaderNumber == 0)
        {
		    <MudText Typo="Typo.h6">
                Tag hozzáadása
            </MudText>
        }
        else
        {
            <MudText Typo="Typo.h6">
                Tag szerkesztése
            </MudText>
        }
	</TitleContent>
	<DialogContent>
        <MudForm Model="@Member" @ref="form" @bind-IsValid="success">
            <MudGrid>
                <MudItem xs="12" sm="12" md="12" lg="12" xl="12" xxl="12">
                    <MudTextField Label="Név"
                                  @bind-Value="Member!.Name" For="@(() => Member!.Name)" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12" lg="12" xl="12" xxl="12">
                    <MudTextField Label="Lakcím"
                                  @bind-Value="Member!.Address" For="@(() => Member!.Address)" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12" lg="12" xl="12" xxl="12">
                    <MudDatePicker Label="Születési idő" @bind-Date="tmpBirthDay" MinDate="new DateTime(1900, 1, 1)" MaxDate="new DateTime(2020, 12, 31)" />
                </MudItem>
            </MudGrid>
        </MudForm>
	</DialogContent>
	<DialogActions>
		<MudButton Variant="Variant.Filled" OnClick="Cancel" Color="Color.Info">Bezár</MudButton>
		<MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Primary">Mentés</MudButton>
	</DialogActions>
</MudDialog>