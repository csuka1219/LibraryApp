@using Library;
<MudDialog>
	<TitleContent>
		<MudText Typo="Typo.h6">
			Könyv hozzáadása
		</MudText>
	</TitleContent>
	<DialogContent>
		<MudForm @ref="@form" Model="@Book" @bind-IsValid="@success">
			<MudGrid>
				<MudItem xs="12" sm="12" md="12" lg="12" xl="12" xxl="12">
					<MudTextField Label="Könyv címe" For="@(() => Book!.Title)" @bind-Value="@Book!.Title"></MudTextField>
				</MudItem>
				<MudItem xs="12" sm="12" md="12" lg="12" xl="12" xxl="12">
					<MudTextField Label="Író" For="@(() => Book!.Author)" @bind-Value="@Book!.Author"></MudTextField>
				</MudItem>
				<MudItem xs="12" sm="12" md="12" lg="12" xl="12" xxl="12">
					<MudTextField Label="Kiadó" For="@(() => Book!.Publisher)" @bind-Value="@Book!.Publisher"></MudTextField>
				</MudItem>
				<MudItem xs="12" sm="12" md="12" lg="12" xl="12" xxl="12">
					<MudNumericField Label="Megjelenés éve" For="@(() => Book!.Year)" @bind-Value="@Book!.Year"></MudNumericField>
				</MudItem>
			</MudGrid>
		</MudForm>
	</DialogContent>
	<DialogActions>
		<MudButton Variant="Variant.Filled" OnClick="Cancel" Color="Color.Info">Bezár</MudButton>
		<MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Primary">Mentés</MudButton>
	</DialogActions>
</MudDialog>
